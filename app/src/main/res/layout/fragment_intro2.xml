<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F1FF"
    android:padding="24dp">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/intro2"
        android:contentDescription="Illustration" />

    <TextView
        android:text="Masuki Dunia E-Learning"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Tingkatkan wawasanmu kapan saja, di mana saja â€” mulai membaca hari ini!"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#7D4EFF"
            android:text="MASUK"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:backgroundTint="#7D4EFF"
            android:text="DAFTAR"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</LinearLayout>
